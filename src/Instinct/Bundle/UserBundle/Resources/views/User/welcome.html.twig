{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
    {% set code_username %}
        <a href="{{ path('fos_user_profile_show') }}">
            {{ app.user.username }}
        </a>
    {% endset %}
    <span>{{ 'layout.logged_in_as'|trans({'%username%': code_username }, 'FOSUserBundle')|raw }}</span>

    <a href="{{ path('fos_user_profile_show') }}">
        <img src="{{ asset('bundles/instinctuser/images/nav/profile.png') }}"
             alt="{{ 'nav.profile'|trans({}, 'InstinctUserBundle') }}"
             title="{{ 'nav.title.profile'|trans({}, 'InstinctUserBundle') }}"
             />
    </a>

    {% if is_granted('ROLE_SUPER_ADMIN') %}
    <a href="{{ path('instinct_user_admin_index') }}">
        <img src="{{ asset('bundles/instinctuser/images/nav/admin.png') }}"
             alt="{{ 'nav.admin'|trans({}, 'InstinctUserBundle') }}"
             title="{{ 'nav.title.admin'|trans({}, 'InstinctUserBundle') }}"
             />
    </a>
    {% endif %}

    <a title="{{ 'layout.logout'|trans({}, 'FOSUserBundle') }}"
       href="{{ path('fos_user_security_logout') }}">
        <img
            src="{{ asset('bundles/instinctuser/images/nav/logout.png') }}"
            alt="{{ 'layout.logout'|trans({}, 'FOSUserBundle') }}"
            title="{{ 'layout.logout'|trans({}, 'FOSUserBundle') }}"
            />
    </a>
{% else %}
    <a class="btn"
       href="{{ path('fos_user_security_login') }}">
        {{ 'layout.login'|trans({}, 'FOSUserBundle') }}
    </a>

    <a class="btn"
       href="{{ path('fos_user_registration_register') }}">
        {{ 'layout.register'|trans({}, 'FOSUserBundle') }}
    </a>
{% endif %}