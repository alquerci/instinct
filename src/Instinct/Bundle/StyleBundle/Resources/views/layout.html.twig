<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
<head>
    <title>{% block title %}Instinct{% endblock %}</title>
    {% block stylesheets %}
        {% render controller('InstinctStyleBundle:HtmlLoader:css') %}
    {% endblock %}
    {% block metadata %}
        {% render controller('InstinctStyleBundle:HtmlLoader:meta') %}
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
</head>
<body>
    {% block body %}
        <header>{% block header %}{% endblock %}</header>
        <nav>
        {% block nav %}
            {% render path("instinct_menu_render_index") %}
        {% endblock %}
        </nav>
        {% block container %}
        <section>
            {% block section %}{% endblock %}
        </section>
        {% endblock %}
        <footer>
            {% block footer %}{% endblock %}
        </footer>
    {% endblock %}
    {% block javascripts %}
        {% render controller('InstinctStyleBundle:HtmlLoader:js') %}
    {% endblock %}
</body>
</html>
