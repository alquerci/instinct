<?xml version="1.0" encoding="UTF-8"?>

<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         colors="false"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false"
         bootstrap="autoload.php.dist"
>
    <php>
        <ini name="intl.default_locale" value="en"/>
        <ini name="intl.error_level" value="0"/>
        <ini name="memory_limit" value="-1"/>
    </php>

    <testsuites>
        <testsuite name="Instinct Test Suite">
            <directory>./src/Instinct/Bridge/*/Tests/</directory>
            <directory>./src/Instinct/Component/*/Tests/</directory>
            <directory>./src/Instinct/Bundle/*/Tests/</directory>
        </testsuite>
    </testsuites>

    <groups>
        <exclude>
            <group>benchmark</group>
        </exclude>
    </groups>

    <filter>
        <whitelist>
            <directory>./src/Instinct/</directory>
            <exclude>
                <directory>./src/Instinct/Bridge/*/Tests</directory>
                <directory>./src/Instinct/Component/*/Tests</directory>
                <directory>./src/Instinct/Bundle/*/Tests</directory>
                <directory>./src/Instinct/Bundle/*/Resources</directory>
                <directory>./src/Instinct/Component/*/Resources</directory>
                <directory>./src/Instinct/Component/*/*/Resources</directory>
            </exclude>
        </whitelist>
    </filter>
</phpunit>
