{% extends 'InstinctUserBundle::layout.html.twig' %}


{% block container %}
<h1>Group list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Name</th>
            <th>Roles</th>
            <th>Id</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('instinct_user_admin_group_show', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
            <td>
                {% for role in entity.roles %}
                    {% if loop.last %}
                        {{ role }}
                    {% else %}
                        {{ role }},
                    {% endif %}
                {% endfor %}
            </td>
            <td>{{ entity.id }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('instinct_user_admin_group_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('instinct_user_admin_group_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('instinct_user_admin_group_new') }}">
            Create a new entry
        </a>
    </li>
</ul>

{% endblock %}